openapi: 3.0.0
info:
  title: PC Management API
  version: 1.0.0
  description: PC管理システムのAPI仕様

servers:
  - url: http://localhost:3001/api
    description: 開発環境

paths:
  /auth/login:
    post:
      summary: ログイン
      tags:
        - Authentication
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required:
                - username
                - password
              properties:
                username:
                  type: string
                password:
                  type: string
      responses:
        '200':
          description: ログイン成功
          content:
            application/json:
              schema:
                type: object
                properties:
                  accessToken:
                    type: string
                  refreshToken:
                    type: string
        '401':
          description: 認証失敗

  /auth/logout:
    post:
      summary: ログアウト
      tags:
        - Authentication
      security:
        - bearerAuth: []
      responses:
        '200':
          description: ログアウト成功

  /pcs:
    get:
      summary: PC一覧取得
      tags:
        - PCs
      security:
        - bearerAuth: []
      parameters:
        - name: page
          in: query
          schema:
            type: integer
            default: 1
        - name: limit
          in: query
          schema:
            type: integer
            default: 10
        - name: search
          in: query
          schema:
            type: string
      responses:
        '200':
          description: PC一覧
          content:
            application/json:
              schema:
                type: object
                properties:
                  data:
                    type: array
                    items:
                      $ref: '#/components/schemas/PC'
                  total:
                    type: integer
                  page:
                    type: integer
                  limit:
                    type: integer

    post:
      summary: PC登録
      tags:
        - PCs
      security:
        - bearerAuth: []
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PCInput'
      responses:
        '201':
          description: PC登録成功
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PC'
        '400':
          description: バリデーションエラー

  /pcs/{id}:
    get:
      summary: PC詳細取得
      tags:
        - PCs
      security:
        - bearerAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: PC詳細
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PC'
        '404':
          description: PCが見つかりません

    put:
      summary: PC更新
      tags:
        - PCs
      security:
        - bearerAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/PCInput'
      responses:
        '200':
          description: PC更新成功
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PC'
        '400':
          description: バリデーションエラー
        '404':
          description: PCが見つかりません

    delete:
      summary: PC削除
      tags:
        - PCs
      security:
        - bearerAuth: []
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: integer
      responses:
        '204':
          description: PC削除成功
        '404':
          description: PCが見つかりません

components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT

  schemas:
    PC:
      type: object
      properties:
        id:
          type: integer
        name:
          type: string
        manufacturer:
          type: string
        model:
          type: string
        serialNumber:
          type: string
        os:
          type: string
        cpu:
          type: string
        memory:
          type: string
        storage:
          type: string
        status:
          type: string
          enum: [active, inactive, maintenance]
        purchaseDate:
          type: string
          format: date
        username:
          type: string
        place:
          type: string
          enum: [office, worksite, remote]
        usefor:
          type: string
        notes:
          type: string
        createdAt:
          type: string
          format: date-time
        updatedAt:
          type: string
          format: date-time

    PCInput:
      type: object
      required:
        - name
        - manufacturer
        - model
      properties:
        name:
          type: string
        manufacturer:
          type: string
        model:
          type: string
        serialNumber:
          type: string
        os:
          type: string
        cpu:
          type: string
        memory:
          type: string
        storage:
          type: string
        status:
          type: string
          enum: [active, inactive, maintenance]
        purchaseDate:
          type: string
          format: date
        username:
          type: string
        place:
          type: string
          enum: [office, worksite, remote]
        usefor:
          type: string
        notes:
          type: string
